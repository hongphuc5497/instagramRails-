<%= form_for Post.new do |f| %>
  <div class="form-group">
    <%= f.text_field :description %>
  </div>
  <div class="form-group">
    <%= f.file_field :image %>
  </div>
  <div class="form-group">
    <%= f.text_field :user_id, value: current_user.id, class:'d-none'%>
  </div>
  <br>
  <div class="text-center">
    <%= f.submit 'Create Post', class: 'btn btn-primary' %>
  </div>
<% end %>

<div class="posts">
  <% @posts.each do |post| %>
    <section class="post">
      <div class="user">
        <div class="avatar">
          <img src="https://cdn.stocksnap.io/img-thumbs/960w/TQDBO1NNHD.jpg">
        </div>
        <div class="username">
          <%= post.user.username %>
        </div>
      </div>
      <% if post.image.attached? %>
        <%= image_tag post.image, class: 'main-image' %>
      <% end %>
      <div class="description">
        <%= post.description %>
      </div>
    </section>
  <% end %>

  <%= paginate @posts %>
</div>
